[global]
    format = "<b>%s</b>\n%b"
    markup = yes
    sort = yes
    shrink = no
    hide_duplicates_count = true
    alignment = center
    bounce_freq = 0
    show_age_threshold = -1
    word_wrap = yes
    ignore_newline = no
    geometry = "150x5-10+25"
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = keyboard
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 8
    frame_width = 2
    horizontal_padding = 2
    startup_notification = false
    hide_duplicates_count = true
    stack_duplicates = true

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    timeout = 5

[urgency_normal]
    timeout = 20

[urgency_critical]
    timeout = 0
