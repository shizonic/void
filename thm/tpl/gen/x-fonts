#define fontName $fontName
#define fontSize $fontSize
#define monoName $monoName
#define monoSize $monoSize
#define symbName $symbName
#define symbSize $symbSize

Xft.autohint:     0
Xft.lcdfilter:    lcddefault
! Xft.hintstyle:  hintfull
Xft.hintstyle:    hintslight
Xft.hinting:      1
Xft.antialias:    1
Xft.rgba:         rgb

*.font:             xft:monoName:size=monoSize,style=regular
*.boldFont:         xft:monoName:size=monoSize,style=bold
*.italicFont:       xft:monoName:size=monoSize,style=italic
*.boldItalicFont:   xft:monoName:size=monoSize,style=bolditalic
